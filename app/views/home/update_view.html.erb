<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1>Update</h1>
      </div>
      <form action="/update/<%= @one_post.id %>" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Title</label>
          <input type="text" name="title" class="form-control" id="exampleInputEmail1" value="<%= @one_post.title %>">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Content</label>
          <textarea class="form-control" name="content" rows="5"><%= @one_post.content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-default" href="/list" role="button">See Post</a>
      </form>
    </div>
  </div>
</div>